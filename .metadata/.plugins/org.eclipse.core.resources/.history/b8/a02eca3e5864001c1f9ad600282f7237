package com.day2;

import java.util.Scanner;

public class Test5 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		String name;
		int kor,eng;
		
		System.out.print("이름?");//sungjae
		name = sc.next();
		
		System.out.println("국어?");
		kor = sc.nextInt();
		
		System.out.println("영어?");
		eng = sc.nextInt();
		
		String pan;
		
		if(kor >= 90 ) {
			pan = "A";
		}else if(kor>=80) {
			pan = "B";
		}else if(kor>=70) {
			pan = "C";
		}else if(kor>=60) {
			pan = "D";
		}else {
			pan = "F";
		}
		
		String ban;
		if(eng >= 90 ) {
			ban = "A";
		}else if(eng>=80) {
			ban = "B";
		}else if(eng>=70) {
			ban = "C";
		}else if(eng>=60) {
			ban = "D";
		}else {
			ban = "F";
		}
		
		
		// 
		
		System.out.println(name + ":" + pan);
		System.out.println(name + ":" + ban);

	}

}
