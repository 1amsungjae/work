//1에서 100까지 수의 홀수의 합, 짝수의 합, 전체의 합

package com.day3;

public class Test9 {

	public static void main(String[] args) {

		int n,sum;

		//홀수의 합 결과
		sum = 0;
		for(n=1;n<=100;n+=2) {
			sum += n;
		}
		System.out.println("홀수의 합 결과 : " + sum);

		//짝수의 합 결과
		sum = 0;
		for(n=2;n<=100;n+=2) {
			sum += n;
		}

		System.out.println("짝수의 합 결과 : " + sum);
		//전체의 합 결과
		sum = 0;
		for(n=1;n<=100;n+=1) {
			sum += n;
		}
		System.out.println("전체의 합 결과 : " + sum);

	}

}
