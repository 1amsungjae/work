//4개의 정수를 입력받고,  가장 큰 수와 가장 작은 수를 구분하여 출력

package com.day2;

import java.util.Scanner;

public class Test10 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		
		int n1,n2,n3,n4
		
		System.out.print("숫자는?");//sungjae
		n1 = sc.nextInt();
		n2 = sc.nextInt();
		n3 = sc.nextInt();
		n4 = sc.nextInt();
		
		String pan;
		
		if(n1 > n2 ) {
			pan = "n1";
		}else if(n1>n3) {
			pan = "n1";
		}else if(n1>n4) {
			pan = "n4";
		}else if(n2>n3) {
			pan = "n2";
		}else if(n2>n4) {
			pan = "n2";
		}else if(n3>n4) {
			pan = "n3";
		}else if(n1<n2) {
			pan = "n2";
		}else if(n1<n3) {
			pan = "n3";
		}else if(n1<n4) {
			pan = "n4";
		}else if(n2<n3) {
			pan = "n3";
		}else if(n2<n4) {
			pan = "n4";
		}else if(n3<n4) {
			pan = "n4";
		}
		
		System.out.printf(" 큰수 %d",n1);
		System.out.printf(" 작은수 %d",n4);
		
		

	}

}
